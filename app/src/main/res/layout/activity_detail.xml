<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivDetailsProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/background_dark"
        tools:layout_height="100dp"
        tools:layout_width="100dp" />

    <TextView
        android:id="@+id/tvDetailsTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvDetailsUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ivDetailReply" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:id="@+id/tvDetailsLike"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/tvDetailsBody"
        android:layout_alignStart="@+id/ivDetailLike" />

    <TextView
        android:id="@+id/tvDetailsBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:autoLink="all"
        android:layout_below="@+id/ivDetailsProfile"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvDetailsRetweets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginEnd="13dp"
        android:layout_alignBaseline="@+id/tvDetailsLike"
        android:layout_alignBottom="@+id/tvDetailsLike"
        android:layout_toStartOf="@+id/tvDetailsTimeStamp" />

    <ImageButton
        android:id="@+id/ivDetailLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_vector_heart_stroke"
        android:layout_above="@+id/tvDetailsRetweets"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="26dp" />

    <ImageButton
        android:id="@+id/ivDetailReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_vector_retweet_stroke"
        android:layout_alignTop="@+id/ivDetailLike"
        android:layout_alignStart="@+id/tvDetailsRetweets" />

    <TextView
        android:id="@+id/tvDetailScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivDetailsProfile"
        android:layout_marginStart="17dp" />

    <ImageView
        android:id="@+id/ivDetailsLoadedImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        app:srcCompat="@drawable/ic_vector_close"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvDetailsLike"
        android:layout_alignParentEnd="true" />

</RelativeLayout>